<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hngc.mapper.UserMapper">

    <insert id="save" parameterType="com.hngc.entry.User">
     insert into user(user_name,nick_name,phone) value(#{user_name},#{nick_name},#{phone})
    </insert>
    <select id="select" resultType="user">
        select * from user
    </select>
    <update id="update" parameterType="com.hngc.entry.User">
        update  user  set user_name=#{user_name},nick_name=#{nick_name},phone=#{phone}
        where id = #{id}
    </update>
    <delete id="deleteById" parameterType="int">
        delete  from user where id=#{id}
    </delete>
</mapper>